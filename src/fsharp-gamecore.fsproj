<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageVersion>0.0.2</PackageVersion>
    <PackageId>fsharp-gamecore</PackageId>
    <Title>FSharp GameCore</Title>
    <Authors>Christopher Pritchard (https://github.com/ChrisPritchard)</Authors>
    <Description>A fleshed-out game loop from MonoGame with supporting classes, intended to be used as the core loop of larger games.</Description>
    <PackageTags>monogame fsharp</PackageTags>
    <PackageLicenseUrl>http://unlicense.org/</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/ChrisPritchard/fsharp-gamecore</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="GameModel.fs" />
    <Compile Include="GameLoop.fs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="defaults.mgcb" />
    <None Include="Connection.otf" />
    <None Include="default.spritefont" />
    <MonoGameContentReference Include="**\*.mgcb" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="_white.xnb" CopyToOutputDirectory="preserveNewest" />
    <Content Include="_system.xnb" CopyToOutputDirectory="preserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL.Core" Version="3.7.0.7" />
    <PackageReference Include="MonoGame.Content.Builder" Version="3.7.0.4" />
  </ItemGroup>

</Project>
